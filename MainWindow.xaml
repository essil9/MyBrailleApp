<Window x:Class="BrailleTranslatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Braille Translator" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Labels with Border and Background -->
        <Label Grid.Row="0" Grid.Column="0" Content="Enter Text:" VerticalAlignment="Center" 
               HorizontalAlignment="Left" Padding="10" Background="LightSkyBlue" BorderBrush="DarkSlateGray" BorderThickness="1"/>
        <Label Grid.Row="0" Grid.Column="1" Content="Braille Output:" VerticalAlignment="Center" 
               HorizontalAlignment="Left" Padding="10" Background="LightSkyBlue" BorderBrush="DarkSlateGray" BorderThickness="1"/>

        <!-- TextBox for Input with Border and Background -->
        <TextBox x:Name="textInput" Grid.Row="1" Grid.Column="0" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                 TextChanged="TextInput_TextChanged" BorderBrush="DarkSlateGray" BorderThickness="1" Padding="10" Background="LavenderBlush"/>

        <!-- TextBox for Braille Output with Border and Background -->
        <TextBox x:Name="brailleOutput" Grid.Row="1" Grid.Column="1" AcceptsReturn="True" IsReadOnly="True" 
                 BorderBrush="DarkSlateGray" BorderThickness="1" Padding="10" Background="Lavender"/>

        <!-- Label for ComboBox with Border and Background -->
        <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Select Translation Table:" HorizontalAlignment="Center" 
               Padding="10" Background="LightSkyBlue" BorderBrush="DarkSlateGray" BorderThickness="1"/>

        <!-- ComboBox with Border and Background -->
        <ComboBox x:Name="tableComboBox" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                  BorderBrush="DarkSlateGray" BorderThickness="1" Padding="10" Background="LavenderBlush"/>
    </Grid>
</Window>
